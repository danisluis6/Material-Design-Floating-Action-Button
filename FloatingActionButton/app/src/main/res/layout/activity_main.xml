<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enclaveit.floatingactionbutton.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">
            <include
                layout="@layout/toolbar"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.64">
                    <ImageView
                        android:id="@+id/img"
                        android:src="@drawable/header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <RelativeLayout
                    android:paddingLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_admin"
                        android:src="@drawable/list_admin"
                        android:layout_margin="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:text="Name"
                        android:textSize="16dp"
                        android:textColor="#95a5a6"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/ic_admin"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@id/ic_admin"
                        android:layout_toRightOf="@id/ic_admin"
                        android:background="#E8E8E8"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_phone"
                        android:src="@drawable/list_phone"
                        android:layout_margin="5dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />
                    <TextView
                        android:text="Phone"
                        android:textSize="16dp"
                        android:textColor="#95a5a6"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/ic_phone"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/lineone"
                        android:layout_below="@id/ic_phone"
                        android:layout_toRightOf="@id/ic_phone"
                        android:background="#E8E8E8"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="150dp"
                        android:layout_height="1sp" />
                    <TextView
                        android:id="@+id/mobile"
                        android:text="Mobile"
                        android:textSize="16dp"
                        android:textColor="#95a5a6"
                        android:layout_toRightOf="@id/lineone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@id/mobile"
                        android:layout_toRightOf="@id/lineone"
                        android:layout_marginTop="13dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="20dp"
                        android:background="#E8E8E8"
                        android:layout_height="1sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:fabSize="normal"
        app:layout_behavior="@string/scroll_aware_fab_behavior"
        app:backgroundTint="@color/backgroundTintColor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_mail"
        app:layout_anchor="@id/img"
        app:layout_anchorGravity="bottom|center|end"
        android:layout_margin="@dimen/fab_margin"/>
</android.support.design.widget.CoordinatorLayout>
